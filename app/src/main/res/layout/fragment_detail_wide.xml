<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="horizontal"
        tools:context="sunny.app9ation.xyz.sunny.DetailActivityFragment"
        tools:showIn="@layout/activity_detail"
        >


        <!-- Today nd date view -->

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:orientation="vertical"
            android:layout_weight="3"
            tools:context="sunny.app9ation.xyz.sunny.DetailActivityFragment"
            tools:showIn="@layout/activity_detail"
            tools:background="#abcdef"
            >

            <TextView
                android:id="@+id/detail_day_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today"
                android:padding="12dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="June 24"
                android:padding="12dp"
                android:id="@+id/detail_date_textview"/>

            </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_weight="1"
            tools:context="sunny.app9ation.xyz.sunny.DetailActivityFragment"
            tools:showIn="@layout/activity_detail"
            tools:background="#e9beda"
            >



            <!-- Main content - high, low, art, weather state-->

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail_middle_component"
                android:layout_marginTop="16dp"
                android:baselineAligned="false"
                >

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:background="#ab7711"
                    android:gravity="left"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="21&#xb0;"
                        android:id="@+id/detail_high_textview"
                        android:padding="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="8&#xb0;"
                        android:id="@+id/detail_low_textview"
                        android:padding="10dp"
                        />

                </LinearLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:background="#eacd12"
                    android:padding="16dp"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher"
                        android:id="@+id/detail_icon"
                        android:contentDescription="Weather representational image"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detail_forecast_textview"
                        android:text="Clear"
                        android:padding="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- humidity , wind , pressure -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Humidity: 84%"
                android:padding="12dp"
                android:id="@+id/detail_humidity_textview"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wind 6km/H NW"
                android:padding="12dp"
                android:id="@+id/detail_wind_textview"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRESURRE: 1014  hPa"
                android:padding="12dp"
                android:id="@+id/detail_pressure_textview"/>


        </LinearLayout>

    </LinearLayout>




</ScrollView>